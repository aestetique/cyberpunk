<div class="field">
    <label for="{{edit}}">{{loc label}}</label>
    <span class="flex-pad"></span>

    <input
        {{#if readOnly}}readonly{{/if}}
        class="number nogrow nowidth"
        name="{{edit}}"
        type="number"

        {{#if readOnly}}
            value="{{getByPath . edit}}"

        {{else}}
            {{#unless (eq (getByPath . edit) 0)}}
                value="{{getByPath . edit}}"
            {{/unless}}
            placeholder="0"
        {{/if}}
    />
</div>
