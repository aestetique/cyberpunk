{{!-- Stuff that affects how many shots the weapon can pump out --}}
<div class="field-list">
    {{> (tpl "fields/number") label="ShotsLeft" edit="system.shotsLeft"}}
    {{> (tpl "fields/number") label="Shots" edit="system.shots"}}
    {{> (tpl "fields/number") label="RoF" edit="system.rof"}}
    {{> (tpl "fields/select") label="Reliability" edit="system.reliability" choices=reliabilities}}
</div>

{{!-- What kind of thing is this weapon, how it's used --}}
<div class="field-list">
    {{!-- When changing weapon type, the weapon's attack type will not update correspondingly until the sheet is closed --}}
    {{> (tpl "fields/select") label="WeaponType" edit="system.weaponType" choices=weaponTypes}}
    {{#if showCaliber}}
    {{> (tpl "fields/select") label="Caliber" edit="system.caliber" choices=caliberChoices}}
    {{/if}}
    {{> (tpl "fields/select") label="AttackType" edit="system.attackType" choices=attackTypes allowBlank=true}}
    {{!-- Custom, as all the translate keys start with Skill, but they don't in the character --}}
    {{!-- This might not need to be custom anymore, as regular selects can deal with choices that supply their own translateKeys --}}
    <div class="field">
        <label for="system.attackSkill">{{loc "AttackSkill"}}</label>
        <div class="flex-pad"></div>
        {{#if (eq system.weaponType 'Exotic')}}
            {{!-- This will be populated by actor skills if it's held by an actor, but an input is at least editable --}}
            <datalist id="possibleSkills">
                {{#each attackSkills as |skill|}}
                <option value="{{skill}}">{{skill}}</option>
                {{/each}}
            </datalist>
            <input type="text" list="possibleSkills" placeholder="Choose Skill" name="system.attackSkill" value="{{system.attackSkill}}"/>
        {{else}}
            <select name="system.attackSkill">
                {{#each attackSkills as |skill|}}
                <option value="{{skill}}" {{#if (eq ../system.attackSkill skill)}}selected{{/if}}>{{skill}}</option>
                {{/each}}
            </select>
        {{/if}}
    </div>
    {{> (tpl "fields/select") label="Concealability" edit="system.concealability" choices=concealabilities}}
</div>

{{!-- Market stuff --}}
<div class="field-list">
    {{> (tpl "fields/select") label="Availability" edit="system.availability" choices=availabilities}}
    {{!-- Ammo counts as market, as it doesn't affect things mechanically currently --}}
    {{> (tpl "fields/string") label="AmmoType" edit="system.ammoType"}}
</div>